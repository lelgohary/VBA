Sub saveasxlsm()
Dim dt As String
Dim wbName As String
Dim path As String

Application.DisplayAlerts = False

wbName = "anything I want to call you "
dt = Format(CStr(Now), "mm.dd")
path = "C:\Users\Lyla\"  '<--------- where you want it saved

ActiveWorkbook.SaveAs Filename:=path & wbName & dt, FileFormat:=52
End Sub
